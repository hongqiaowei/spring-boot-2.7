spring :
    application :
        name       : ${APP_NAME}
        version    : @project.version@  # pom的project.version
        build.time : @timestamp@        # 程序的编译时间

    main :
        allow-bean-definition-overriding : false

    jackson :
        parser :
            allow-single-quotes          : true
            allow-unquoted-field-names   : true
            allow-unquoted-control-chars : true

        default-property-inclusion : NON_EMPTY

        serialization :
            write-enums-using-to-string : true
            write-empty-json-arrays     : true
            write-null-map-values       : true

        deserialization :
            read-enums-using-to-string : true
            fail-on-numbers-for-enums  : true
            fail-on-unknown-properties : false

    codec :
#       log-request-details : true
        max-in-memory-size  : -1

    redis :
        client-type : lettuce
        host        : 192.168.66.10
        port        : 6379
        password    : redis
        database    : 10
        lettuce :
            # false的原因参：
            # https://redis.io/docs/manual/pipelining
            # https://lettuce.io/core/release/reference/index.html#_connection_pooling
            # https://developer.aliyun.com/article/1064562?spm=a2c6h.13262185.profile.8.17cb70983YGAls
            # 之前工作中有性能测试，涉及lettuce，发现默认单连接，但性能不错
            pool.enabled : false

    datasource :
        driver-class-name    : com.mysql.cj.jdbc.Driver
        url                  : jdbc:mysql://192.168.66.10:3306/test?allowPublicKeyRetrieval=true&useSSL=false&characterEncoding=utf8&autoReconnect=true&failOverReadOnly=false&zeroDateTimeBehavior=convertToNull&tinyInt1isBit=false&transformedBitIsBoolean=true&serverTimezone=GMT%2B8&allowMultiQueries=true&rewriteBatchedStatements=true
        username             : root
        password             : mysql
        type                 : com.zaxxer.hikari.HikariDataSource
        generate-unique-name : false
        name                 : SB2DataSource
        # 可根据实际业务和资源调整hikari连接池参数
        hikari :
            pool-name             : SB2HikariPool
            minimum-idle          : 2
            connection-test-query : SELECT 1

    jpa :
        open-in-view : false
        show-sql     : true     # just for test

    # 配置spring boot的task executor
    task :
        execution :
            # 可根据实际业务和资源配置线程池
            pool :
                max-size       : 64
                queue-capacity : 200
            shutdown :
                await-termination : true

